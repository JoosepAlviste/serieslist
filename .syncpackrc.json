{
  "$schema": "./node_modules/syncpack/dist/schema.json",
  "versionGroups": [
    {
      "label": "Use workspace protocol for local packages",
      "dependencies": ["$LOCAL"],
      "dependencyTypes": ["dev", "prod"],
      "pinVersion": "workspace:*"
    }
  ],
  "sortFirst": [
    "name",
    "description",
    "version",
    "private",
    "license",
    "author",
    "repository",
    "homepage",
    "bugs",
    "engines",
    "type",
    "sideEffects",
    "main",
    "types",
    "exports",
    "scripts",
    "dependencies",
    "peerDependencies",
    "devDependencies"
  ]
}

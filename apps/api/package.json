{
  "name": "@serieslist/api",
  "version": "1.0.0",
  "type": "module",
  "sideEffects": [
    "./src/**/*.schema.ts",
    "./src/lib/initSentry.ts"
  ],
  "scripts": {
    "build": "rimraf dist && NODE_ENV=production tsx bin/build.ts",
    "build:docker": "(cd ../.. && docker buildx build --push --cache-to type=gha,mode=max,scope=api --cache-from type=gha,scope=api -t ghcr.io/joosepalviste/serieslist-api:latest -f apps/api/Dockerfile --target production .)",
    "build:e2e": "(cd ../.. && nx run @serieslist/api:build)",
    "clear-test-db": "dotenv -e ../../.env.test tsx bin/clearDatabase.ts",
    "codegen": "DOTENV_CONFIG_PATH='../../.env' graphql-codegen-esm -r dotenv/config",
    "codegen:watch": "pnpm codegen -- --watch",
    "lint": "eslint . && madge --circular --extensions ts ./src",
    "lint:fix": "eslint --fix .",
    "migrate": "tsx bin/migrate.ts",
    "migrate:prod": "NODE_ENV=production dotenv -e ../../.env node dist/bin/migrate.js",
    "migrate:test": "dotenv -e ../../.env.test tsx bin/migrate.ts",
    "start": "NODE_ENV=development tsx watch --clear-screen=false src/main.ts",
    "start:e2e": "NODE_ENV=test pnpm start:prod",
    "start:prod": "NODE_ENV=production node dist/src/main.js",
    "test": "dotenv -e ../../.env.test vitest run",
    "test:coverage": "dotenv -e ../../.env.test vitest run -- --coverage",
    "test:watch": "dotenv -e ../../.env.test vitest",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@envelop/sentry": "^8.0.0",
    "@escape.tech/graphql-armor": "^2.4.0",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/rate-limit": "^9.1.0",
    "@sentry/node": "^7.56.0",
    "@sentry/tracing": "^7.100.1",
    "@serieslist/core-db": "workspace:*",
    "@serieslist/core-graphql-server": "workspace:*",
    "@serieslist/core-logger": "workspace:*",
    "@serieslist/feature-series-sync": "workspace:*",
    "@serieslist/feature-tmdb": "workspace:*",
    "@serieslist/util-arrays": "workspace:*",
    "@serieslist/util-dates": "workspace:*",
    "bcryptjs": "^2.4.3",
    "dataloader": "^2.2.2",
    "date-fns": "^3.3.1",
    "dotenv": "^16.4.2",
    "dotenv-cli": "^7.3.0",
    "drizzle-orm": "^0.29.3",
    "fastify": "^4.26.0",
    "fishery": "^2.2.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-yoga": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "just-group-by": "^2.2.0",
    "just-index": "^4.2.0",
    "just-omit": "^2.2.0",
    "nanoid": "^5.0.5",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "pino": "^9.14.0",
    "zod": "^3.22.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.2",
    "@graphql-tools/executor-http": "^1.0.0",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@serieslist/core-db-factories": "workspace:*",
    "@serieslist/core-esbuild": "workspace:*",
    "@serieslist/eslint-config-base": "workspace:*",
    "@serieslist/prettier-config": "workspace:*",
    "@serieslist/typescript-config-base": "workspace:*",
    "@serieslist/util-types": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.9.2",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^1.2.2",
    "just-filter-object": "^3.2.0",
    "madge": "^6.1.0",
    "nock": "^13.5.1",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}

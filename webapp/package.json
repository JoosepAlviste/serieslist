{
  "name": "@serieslist/webapp",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsx ./src/server/server.ts",
    "start:e2e": "dotenv -e ../.env.e2e npm run start",
    "build": "rimraf dist && vite build && npm run build:server",
    "build:server": "tsc -p tsconfig.server.json",
    "start:prod": "cross-env NODE_ENV=production node dist/prodServer/server.js",
    "lint": "eslint src && madge --circular --extensions ts,tsx ./src",
    "tsc": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "dotenv -e ../.env.e2e playwright test",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "@apollo/client": "^3.7.10",
    "@hookform/resolvers": "^3.1.0",
    "@radix-ui/react-dropdown-menu": "2.0.4",
    "@radix-ui/react-label": "^2.0.1",
    "@vanilla-extract/css": "^1.10.0",
    "@vitejs/plugin-react": "^3.0.0",
    "classnames": "^2.3.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "isomorphic-unfetch": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.9",
    "sirv": "^2.0.2",
    "vite-plugin-ssr": "^0.4.95",
    "vite-plugin-svgr": "^3.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "3.2.2",
    "@graphql-codegen/client-preset": "2.1.1",
    "@playwright/test": "^1.31.2",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "@vitest/coverage-c8": "^0.29.3",
    "dotenv-cli": "^7.1.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fishery": "^2.2.2",
    "jsdom": "^21.1.1",
    "madge": "^6.0.0",
    "mock-apollo-client": "^1.2.1",
    "prettier": "2.8.4",
    "rimraf": "^4.4.0",
    "tsx": "^3.12.6",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vitest": "^0.29.3"
  }
}

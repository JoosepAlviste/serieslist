{
  "name": "@serieslist/api",
  "version": "1.0.0",
  "private": true,
  "description": "A side project. Keep track of your seen series' episodes.",
  "author": "Joosep Alviste <joosep.alviste@gmail.com> (https://joosep.xyz/)",
  "type": "module",
  "module": "src/main.ts",
  "scripts": {
    "postinstall": "cp -n ../.env.example ../.env || exit 0",
    "build": "NODE_ENV=production rimraf dist && tsc -p tsconfig.build.json && resolve-tspaths",
    "start": "NODE_ENV=development tsx watch src/main.ts",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "start:e2e": "dotenv -e ../.env.e2e npm start",
    "tsc": "tsc --noEmit",
    "lint": "eslint src && madge --circular --extensions ts ./src",
    "test": "dotenv -e ../.env.test vitest",
    "test:coverage": "dotenv -e ../.env.test vitest run -- --coverage",
    "codegen": "DOTENV_CONFIG_PATH='../.env' graphql-codegen-esm -r dotenv/config",
    "codegen:watch": "npm run codegen -- --watch",
    "codegen:db": "tsx bin/kyselyCodegen.ts && eslint --fix src/generated/db.ts",
    "migration": "./bin/createMigration.sh",
    "migrate": "tsx bin/migrate.ts && npm run codegen:db",
    "migrate:test": "dotenv -e ../.env.test tsx bin/migrate.ts"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.1",
    "@pothos/core": "^3.29.0",
    "@pothos/plugin-dataloader": "^3.17.1",
    "@pothos/plugin-errors": "^3.11.0",
    "@pothos/plugin-scope-auth": "^3.19.1",
    "@pothos/plugin-tracing": "^0.5.7",
    "@pothos/plugin-validation": "^3.9.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^2.2.2",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.17.0",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.22.0",
    "graphql-yoga": "^3.7.2",
    "jsonwebtoken": "^9.0.0",
    "just-group-by": "^2.2.0",
    "just-index": "^4.2.0",
    "just-unique": "^4.2.0",
    "kysely": "^0.24.2",
    "node-fetch": "^3.3.1",
    "pg": "^8.10.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/client-preset": "^2.1.1",
    "@graphql-tools/executor-http": "^0.1.9",
    "@graphql-typed-document-node/core": "^3.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.3",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/coverage-c8": "^0.29.3",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "fishery": "^2.2.2",
    "kysely-codegen": "^0.10.0",
    "madge": "^6.0.0",
    "nanoid": "^4.0.2",
    "nock": "^13.3.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.4",
    "resolve-tspaths": "^0.8.8",
    "rimraf": "^4.4.0",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5",
    "vitest": "^0.29.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoosepAlviste/serieslist.git"
  },
  "bugs": {
    "url": "https://github.com/JoosepAlviste/serieslist/issues"
  },
  "homepage": "https://github.com/JoosepAlviste/serieslist#readme"
}

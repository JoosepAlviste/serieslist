{
  "name": "@serieslist/api",
  "version": "1.0.0",
  "private": true,
  "description": "A side project. Keep track of your seen series' episodes.",
  "author": "Joosep Alviste <joosep.alviste@gmail.com> (https://joosep.xyz/)",
  "type": "module",
  "module": "src/main.ts",
  "scripts": {
    "postinstall": "cp -n ../.env.example ../.env",
    "build": "rimraf dist && tsc -p tsconfig.build.json && resolve-tspaths",
    "start": "tsx watch src/main.ts",
    "start:prod": "node dist/main.js",
    "start:e2e": "dotenv -e ../.env.e2e npm start",
    "tsc": "tsc --noEmit",
    "lint": "eslint src && madge --circular --extensions ts ./src",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "codegen": "graphql-codegen-esm",
    "codegen:watch": "npm run codegen -- --watch",
    "codegen:db": "tsx bin/kyselyCodegen.ts && eslint --fix src/generated/db.ts",
    "migration": "./bin/createMigration.sh",
    "migrate": "tsx bin/migrate.ts && npm run codegen:db",
    "migrate:e2e": "dotenv -e ../.env.e2e npm run migrate"
  },
  "dependencies": {
    "@pothos/core": "^3.29.0",
    "@pothos/plugin-tracing": "^0.5.7",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "graphql-yoga": "^3.7.2",
    "kysely": "^0.23.5",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/client-preset": "^2.1.1",
    "@graphql-tools/executor-http": "^0.1.9",
    "@graphql-typed-document-node/core": "^3.1.2",
    "@types/node": "^18.15.3",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/coverage-c8": "^0.29.3",
    "dotenv-cli": "^7.1.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "kysely-codegen": "^0.9.0",
    "madge": "^6.0.0",
    "prettier": "^2.8.4",
    "resolve-tspaths": "^0.8.8",
    "rimraf": "^4.4.0",
    "tsx": "^3.12.5",
    "typescript": "^4.9.5",
    "vitest": "^0.29.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoosepAlviste/serieslist.git"
  },
  "bugs": {
    "url": "https://github.com/JoosepAlviste/serieslist/issues"
  },
  "homepage": "https://github.com/JoosepAlviste/serieslist#readme"
}
